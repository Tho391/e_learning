<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"

    android:background="@color/primary_light">

    <ImageButton
        android:id="@+id/thingImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/thingName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_title"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_image" />

    <EditText
        android:id="@+id/thingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAudioThing"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/background_title"
        android:gravity="center"
        android:hint="Answer"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/buttonAudioThing"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttonshape"
        android:elevation="5dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_audio"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonRightThing"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttonshape"
        android:clipToPadding="false"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_rightarrow"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonLeftThing"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttonshape"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_leftarrow"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/questionCounter"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView_question"
        android:minWidth="100dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_question"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="Question"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonAdd"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_below="@+id/thingName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonshape"
        android:elevation="05dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add" />
</RelativeLayout>